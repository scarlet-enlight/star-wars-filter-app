<UserControl x:Class="StarWarsFilterApp.View.FilterCharacterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StarWarsFilterApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Name:"/>
            <TextBox x:Name="tbx_name"/>

            <Label Content="Species:"/>
            <TextBox x:Name="tbx_species"/>

            <Label Content="Planet:"/>
            <TextBox x:Name="tbx_planet"/>

            <Label Content="Organization:"/>
            <TextBox x:Name="tbx_organization"/>

            <Label Content="Film:"/>
            <TextBox x:Name="tbx_film"/>

            <Button x:Name="btn_filter" Content="Filter" 
                Background="DarkBlue" Foreground="White"
                Margin="20 5" Command="{Binding FilterCharactersCommand}"/>
            <Button x:Name="btn_startView" Content="Back" 
                Background="DarkGray" Foreground="White"
                Margin="20 5" Command="{Binding ReturnCommand}"/>
        </StackPanel>
        <ListBox Grid.Column="1" x:Name="lb_characters"
         SelectionChanged="Lb_characters_SelectionChanged"/>
    </Grid>
</UserControl>
